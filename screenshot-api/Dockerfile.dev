# syntax=docker/dockerfile:1
FROM python:3.12.11-slim-bookworm

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PLAYWRIGHT_BROWSERS_PATH=/ms-playwright \
    HOME=/home/app \
    XDG_CACHE_HOME=/home/app/.cache

WORKDIR /app

# Create non-root user
RUN groupadd -r app && useradd -r -g app -d /home/app app && \
    mkdir -p /home/app/.cache && chown -R app:app /home/app

# System deps required for browsers
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    ca-certificates \
    curl \
    xvfb \
    xdg-utils \
    && rm -rf /var/lib/apt/lists/*

# Python deps (Camoufox per docs) and dev server (hypercorn)
COPY requirements.txt ./requirements.txt
RUN pip install --no-cache-dir -U camoufox[geoip] hypercorn && \
    pip install --no-cache-dir -r requirements.txt && \
    python -m camoufox fetch

# Install Playwright engines
RUN playwright install --with-deps chromium firefox webkit ffmpeg && \
    rm -rf /var/lib/apt/lists/*

# Copy application code
COPY . .

# Ensure permissions
RUN chown -R app:app /app /ms-playwright || true

EXPOSE 8000

# Run FastAPI app with Hypercorn (no Uvicorn)
USER app
CMD ["hypercorn", "--bind", "0.0.0.0:8000", "--workers", "1", "--access-log", "-", "screenshot_api:app"]
